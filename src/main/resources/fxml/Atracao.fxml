<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AtracaoController">
    <top>
        <Label text="Atrações Disponíveis" style="-fx-font-size: 20px; -fx-padding: 10;"/>
    </top>
    <center>
        <TableView fx:id="tableAtracoes">
            <columns>
                <TableColumn fx:id="colNome" text="Nome"/>
                <TableColumn fx:id="colDescricao" text="Descrição"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <Button fx:id="btnVoltar" text="Voltar" onAction="#voltar" style="-fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>

