<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MainController"
      fx:id="root"
      spacing="20"
      alignment="CENTER"
      styleClass="root"
      stylesheets="@css/style.css"
      style="-fx-padding: 30;">

    <Label text="Bem-vindo à Bilheteria Virtual" styleClass="titulo"/>

    <Button fx:id="btnCompraIngresso" text="Comprar Ingresso" onAction="#irParaCompra" styleClass="botao-acao"/>
    <Button fx:id="btnAtracoes" text="Ver Atrações" onAction="#irParaAtracoes" styleClass="botao-acao"/>
    <Button fx:id="btnVerBilheterias" text="Ver Bilheterias" onAction="#irParaBilheterias" styleClass="botao-acao"/>
    <Button fx:id="btnLogout" text="Logout" onAction="#logout" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />

</VBox>

