<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MainController"
      fx:id="root"
      spacing="20" alignment="CENTER"
      stylesheets="@css/style.css"
      style="-fx-padding: 30;">

    <Label text="Bem-vindo à Bilheteria Virtual" style="-fx-font-size: 20px;"/>
    <Button fx:id="btnCompraIngresso" text="Comprar Ingresso" onAction="#irParaCompra" prefWidth="200"/>
    <Button fx:id="btnAtracoes" text="Ver Atrações" onAction="#irParaAtracoes" prefWidth="200"/>
    <Button fx:id="btnLogout" text="Logout" onAction="#logout" prefWidth="200"
            style="-fx-background-color: #ff4d4d; -fx-text-fill: white;"/>
</VBox>
